<div>
    <h1>Hola {{user.first_name}} {{user.last_name}}</h1>
    <img src="/img/profiles/{{user.thumbnail.filename}}" alt="{{ user.thumbnail.originalname }}" width="300">
    <p>{{user.email}}</p>
    <p id=>Tu rol es de {{user.role}}</p>
</div>

{{#unless (equalsIgnoreCase user.role 'ADMIN')}}
<button>
    <a href="/products" class="btn btn-secondary m-3 keep-shopping-btn">Seguir Comprando</a>
</button>
{{/unless}}

{{#if (equalsIgnoreCase user.role 'USER')}}
<button>
    <a href="/premium/{{user.id}}" class="btn btn-secondary m-3 change-role-btn">Cambiar role</a>
</button>
<button>
    <a href="/premium/{{user.id}}/documents" class="btn btn-secondary m-3 add-product-btn">Cargar Documentos</a>
</button>
{{/if}}

